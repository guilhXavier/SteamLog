<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">

    <TextView
        android:id="@+id/tv_bemvindo_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="@string/bem_vindo"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imv_foto_perfil"
        android:layout_width="125dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/userimage"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_numerojogos_perfil"
        android:layout_alignParentStart="true"
        android:background="@color/BackGourndTextViewsColor"
        android:text="@string/email2"
        android:textColor="@color/SecondTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_numerojogos_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="230dp"
        android:background="@color/BackGourndTextViewsColor"
        android:text="@string/nuemro_de_jogos"
        android:textColor="@color/SecondTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_numeroconquistas_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="199dp"
        android:background="@color/BackGourndTextViewsColor"
        android:text="@string/numero_de_conquistas"
        android:textColor="@color/SecondTextColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_steamid_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_numeroconquistas_perfil"
        android:layout_marginTop="-199dp"
        android:background="@color/BackGourndTextViewsColor"
        android:text="@string/steamid2"
        android:textColor="@color/SecondTextColor"
        android:textSize="18sp" />

</RelativeLayout>